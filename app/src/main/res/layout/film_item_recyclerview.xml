<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/film_item_imageIV"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/film_item_titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/film_item_imageIV"
            android:text="Изгой-один: Звёздные..."
            android:textColor="#222020"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/film_item_genre_and_yearTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/film_item_titleTV"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/film_item_imageIV"
            android:background="@color/white"
            android:drawablePadding="2dp"
            android:text="Фантастика (2016)"
            android:textColor="#4A4D4E"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/film_item_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/film_item_titleTV"
            app:srcCompat="@drawable/ic_baseline_star_24" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>